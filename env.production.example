# Database - PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/database_name

# Environment
ENVIRONMENT=prod

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-make-it-long-and-random
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24

# Authentication Provider (postgresql or supabase)
AUTH_PROVIDER=postgresql

# AI Configuration
GEMINI_API_KEY=your-gemini-api-key-here

# CORS settings
CORS_ORIGINS=["http://your-frontend-domain.com", "https://your-frontend-domain.com"]

# Frontend URL (used for invitation links)
FRONTEND_URL=https://your-frontend-domain.com

# SMTP Email Configuration
# Gmail SMTP Configuration:
# Note: Use App Password, not your regular Gmail password
# To generate App Password: Google Account > Security > 2-Step Verification > App passwords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
SMTP_FROM_NAME=Your Organization Name
SMTP_FROM_EMAIL=your-email@gmail.com

# Formbricks (optional)
FORMBRICKS_SERVER_URL=https://your-formbricks-server.com
FORMBRICKS_ADMIN_SECRET=your-formbricks-admin-secret
FORMBRICKS_JWT_SECRET=your-shared-secret

# Supabase (if using)
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Super Admin Password
SUPER_ADMIN_PASSWORD=your-secure-super-admin-password
